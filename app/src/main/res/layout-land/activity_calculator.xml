<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".CalculatorActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentEq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="bottom|right"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif"
            android:gravity="top|right"
            android:text="0"
            android:textColor="@color/grey"
            android:textSize="60sp"
            android:layout_marginRight="50dp"
            />

        <LinearLayout
            android:id="@+id/nums"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:padding="0dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="0dp">

                <Button
                    android:id="@+id/openParentheses"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="("
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/closeParentheses"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text=")"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/mc"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="mc"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/mPlus"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="m+"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/mMinus"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="m-"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/mr"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="mr"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/ac"
                    style="@style/Button3_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="AC"
                    android:textSize="12dp">


                </Button>

                <Button
                    android:id="@+id/flipSign"
                    style="@style/Button3_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="+/-"
                    android:textSize="12dp">

                </Button>

                <Button
                    android:id="@+id/percent"
                    style="@style/Button3_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="%"
                    android:textSize="12dp">


                </Button>

                <Button
                    android:id="@+id/divide"
                    style="@style/Button1_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="/"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp">


                </Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="0dp"
                >

                <Button
                    android:id="@+id/second"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="2nd"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/squared"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="x^2"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/cube"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="x^3"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>


                <Button
                    android:id="@+id/xraisedy"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="x^y"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/eraisedx"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="e^x"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/tenraisedx"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="10^x"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/num7"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/num8"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/num9"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/multiply"
                    style="@style/Button1_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="x"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="0dp"
                >

                <Button
                    android:id="@+id/oneoverx"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="1/x"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/sqrt"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="sqrt"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/cuberoot"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="crbt"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/yroot"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="y-root"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/ln"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="ln"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/logten"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="log10"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/num4"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_margin="5dp"

                    android:fontFamily="sans-serif-thin"
                    android:text="4"
                    android:textColor="@color/white"

                    android:textSize="12dp">


                </Button>

                <Button
                    android:id="@+id/num5"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="12dp"

                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/num6"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="12dp"

                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/minus"
                    style="@style/Button1_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"

                    android:layout_margin="5dp"
                    >


                </Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="0dp"
                >

                <Button
                    android:id="@+id/factorial"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="x!"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/sin"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="sin"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/cos"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="cos"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/tan"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="tan"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/e"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="e"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/EE"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="EE"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/num1"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="12dp"

                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/num2"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="2"

                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:visibility="visible"

                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/num3"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="12dp"

                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/plus"
                    style="@style/Button1_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"

                    android:layout_margin="5dp"
                    >


                </Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="0dp"
                >

                <Button
                    android:id="@+id/Rad"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="Rad"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/sinh"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="sinh"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/cosh"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="cosh"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/tanh"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="tanh"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/pi"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="pi"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>
                <Button
                    android:id="@+id/rand"
                    style="@style/Button5"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="Rand"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/backspace"
                    style="@style/Button3_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="del"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    android:textSize="12dp">


                </Button>

                <Button
                    android:id="@+id/num0"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"

                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12dp"

                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/period"
                    style="@style/Button2_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    >


                </Button>

                <Button
                    android:id="@+id/equals"
                    style="@style/Button1_land"
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="="
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:layout_margin="5dp">

                </Button>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>