<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity"
    android:background="@color/black"
    android:padding="20dp">

    <TextView
        android:id="@+id/currentEq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="0"
        android:textColor="@color/white"
        android:gravity="bottom|right"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nums"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="sans-serif"
        android:gravity="bottom|right"
        android:text="0"
        android:textColor="@color/white"

        android:textSize="60sp" />

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ac"
                style="@style/Button3"
                android:fontFamily="sans-serif-thin"
                android:text="AC">

            </Button>

            <Button
                android:id="@+id/flipSign"
                style="@style/Button3"
                android:fontFamily="sans-serif-thin"
                android:text="+/-">

            </Button>

            <Button
                android:id="@+id/percent"
                style="@style/Button3"
                android:fontFamily="sans-serif-thin"
                android:text="%">

            </Button>

            <Button
                android:id="@+id/divide"
                style="@style/Button1"
                android:fontFamily="sans-serif-thin"
                android:text="/"
                android:textColor="#FFFFFF">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num7"
                style="@style/Button2"
                android:fontFamily="sans-serif-thin"
                android:text="7"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/num8"
                style="@style/Button2"
                android:fontFamily="sans-serif-thin"
                android:text="8"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/num9"
                style="@style/Button2"
                android:fontFamily="sans-serif-thin"
                android:text="9"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/multiply"
                style="@style/Button1"
                android:fontFamily="sans-serif-thin"
                android:text="x"
                android:textColor="#FFFFFF">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num4"
                style="@style/Button2"
                android:fontFamily="sans-serif-thin"
                android:text="4"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/num5"
                style="@style/Button2"
                android:fontFamily="sans-serif-thin"
                android:text="5"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/num6"
                style="@style/Button2"
                android:fontFamily="sans-serif-thin"
                android:text="6"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/minus"
                style="@style/Button1"
                android:fontFamily="sans-serif-thin"
                android:text="-"
                android:textColor="#FFFFFF">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num1"
                style="@style/Button2"
                android:fontFamily="sans-serif-thin"
                android:text="1"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/num2"
                style="@style/Button2"
                android:fontFamily="sans-serif-thin"
                android:text="2"
                android:textColor="@color/white"
                android:visibility="visible">

            </Button>

            <Button
                android:id="@+id/num3"
                style="@style/Button2"
                android:fontFamily="sans-serif-thin"
                android:text="3"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/plus"
                style="@style/Button1"
                android:fontFamily="sans-serif-thin"
                android:text="+"
                android:textColor="#FFFFFF">

            </Button>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backspace"
                style="@style/Button3"
                android:text="del"
                android:fontFamily="sans-serif-thin"
                android:textAlignment="center"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/num0"
                style="@style/Button2"
                android:text="0"
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/period"
                style="@style/Button1"
                android:text="."
                android:textColor="@color/white">

            </Button>

            <Button
                android:id="@+id/equals"
                style="@style/Button1"
                android:fontFamily="sans-serif-thin"
                android:text="="
                android:textColor="#FFFFFF">

            </Button>


        </LinearLayout>
    </LinearLayout>




</RelativeLayout>